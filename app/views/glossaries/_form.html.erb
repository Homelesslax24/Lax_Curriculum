<%= form_for(glossary) do |f| %>
  <% if glossary.errors.any? %>
        <div class="row col-lg-10 col-lg-offset-1 alert alert-info first-item" id="error_explanation">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <h2><%= pluralize(drill.errors.count, "error") %> prohibited this definition from being saved:</h2>

      <ul>
      <% glossary.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row">
    <div class="form-group col-xs-12 col-md-4">
      <%= f.label :word %>
      <%= f.text_field :word, class: "form-control", autofocus: true, placeholder:"Word"  %>
    </div>

    <div class="form-group col-xs-12 col-md-8">
      <%= f.label :definition %>
      <%= f.text_field :definition, class: "form-control", autofocus: true, placeholder:"Definition"  %>
    </div>

    <div class="form-group">
      <%= f.submit "Save", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

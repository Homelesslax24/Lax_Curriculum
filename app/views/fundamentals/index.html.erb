<div class="container">
  <div class="jumbotron">
    <h3>Manage Fundamentals</h3>
    <% if can? :create, Fundamental %> 
      <p><%= link_to 'New Fundamental', new_fundamental_path %></p>
    <% end %>
    <div class="row">
      <div class="table-responsive">
        <table class="table table-sm table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @fundamentals.each do |fundamental| %>
              <tr>
                <td><%= fundamental.name %></td>
                <td><%= link_to 'Show', fundamental, class: "btn btn-default"  %></td>
                <td>
                  <% if can? :update, Fundamental %>
                    <%= link_to 'Edit', edit_fundamental_path(fundamental), class: "btn btn-default"  %>
                  <% end %>   
                </td>
                <td>
                  <% if can? :destroy, Fundamental %>
                    <%= link_to 'Destroy', fundamental, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default"  %>
                  <% end %>    
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<div class="container">
	<div class="jumbotron">
		<h3><%=@user.username%></h3>
		</br>

		<div class="row">
			<p class="col-xs-12 col-md-3">
			  <strong>Email:</strong>
			  <%= @user.email %>
			</p>

			<p class="col-xs-12 col-md-3">
			  <strong>Team:</strong>
			  <%= @user.team %>
			</p>

			<p class="col-xs-12 col-md-3">
			  <strong>Admin:</strong>
			  <% if @user.admin? %>
			  	Yes
			  <% else %>
			  	No
			  <% end %>	
			</p>

			<p class="col-xs-12 col-md-3">
			  <strong>Last logged in on:</strong>
			  <% unless @user.last_sign_in_at == nil or 0 %>
          <%= @user.last_sign_in_at.to_formatted_s(:long) %>
        <% else %>
          Never   
        <% end %>
			</p>
		</div>
			
		<div class="col-xs-12">
			<% if Drill.where(user_id:@user.id).count > 0 %>
					<p>
						<strong>This user created the following drills: </strong>
						<% @user.drills.each do |u| %>
							<%= link_to u.title + ", ", drill_path(u.id) %>
						<% end %>
					</p>
			<% else %>
					<p><strong>This user has not created any drills</strong></p>
			<% end %>	
		</div>

		<div class="col-xs-12">	 
			<p class="center">
				<% if can? :update, User %>
					<%= link_to 'Edit', edit_user_path(@user) %> |
				<% end %>
				<% if can? :update, User %>
					<%= link_to "Delete", @user, method: :delete,
                                  data: { confirm: "You sure?" } %> |
				<% end %>
				<%= link_to 'User List', users_path %>
			</p>
		</div>	
	</div>
</div>

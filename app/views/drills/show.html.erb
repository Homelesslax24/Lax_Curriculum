<div class="container">
	<div class="jumbotron">
		
		<p id="notice"><%= notice %></p>

		<div class="row">
			<div class="col-xs-12 col-md-12">
				<h3><strong><%= @drill.title %></strong></h3>
			</div>
			<div class="col-xs-12 col-md-4">
				<p><strong>Fundamentals: </strong><%= @drill.fundamentals %></p>
			</div>
			<div class="col-xs-12 col-md-4">
				<p><strong>Tools: </strong><%= @drill.tools %></p>
			</div>
			<div class="col-xs-12 col-md-4">
				<p><strong>Players: </strong><%= @drill.players %></p>
			</div>
			<div class="col-xs-12 col-md-12">
				<p><strong>Description: </strong><%= @drill.description %></p>
			</div>
			<div class="col-xs-12 col-md-12">
				<p><strong>Beginner: </strong><%= @drill.beginner %></p>
			</div>
			<div class="col-xs-12 col-md-12">
				<p><strong>Intermediate: </strong><%= @drill.intermediate %></p>
			</div>
			<div class="col-xs-12 col-md-12">
				<p><strong>Advanced: </strong><%= @drill.advanced %></p>
			</div>
			<div class="col-xs-12 col-md-4">
				<p><strong>Link: </strong><%= link_to @drill.link, @drill.link %></p>
			</div>
			<div class="col-xs-12 col-md-4">
				<p><strong>Embed Link: </strong><%= link_to @drill.embed, @drill.embed %></p>
			</div>
			<div class="col-xs-12 col-md-4">
				<p><strong>Created By: </strong><%= link_to @user.find_by_id(@drill.user_id).username, user_path(@drill.user_id) %></p>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-12">
				<p class="center">
					<% if can? :update, @drill %>
						<%= link_to 'Edit', edit_drill_path(@drill) %> |
					<% end %>
					<%= link_to 'Back', drills_path %>
				</p>
			</div>
		</div>
	</div>
</div>
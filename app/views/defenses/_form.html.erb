<%= form_for(defense) do |f| %>
  <% if defense.errors.any? %>
    <div class="row col-lg-10 col-lg-offset-1 alert alert-info first-item" id="error_explanation">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <h2><%= pluralize(defense.errors.count, "error") %> prohibited this defense from being saved:</h2>

      <ul>
      <% defense.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row">
    <div class="form-group col-xs-12 col-md-4">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control", autofocus: true, placeholder:"Name this Defense" %>
    </div>
    <div class="form-group col-xs-12 col-md-4">
      <%= f.label "Type" %><br>
      <%= f.select :situation, ['6v6 Man', '6v6 Zone','EMD', 'Other'], {}, class: "form-control", autofocus: true %>
    </div>
    <div class="form-group col-xs-12 col-md-4">
      <%= f.label "Upload a Diagram" %><br>
      <%= f.file_field :diagram, class: "form-control-file", autofocus: true %>
    </div>
    <div class="form-group col-xs-12 col-md-12">
      <%= f.label :description %><br>
      <%= f.text_area :description, class: "form-control", autofocus: true  %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
